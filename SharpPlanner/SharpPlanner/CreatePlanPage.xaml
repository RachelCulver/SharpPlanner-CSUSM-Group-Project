<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SharpPlanner.CreatePlanPage"
             Title="Create an event">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="EntryTitle" Text="" Placeholder="Event Name"/>
            <Entry x:Name="EntryDesc" Text="" Placeholder="Event Description"/>
            <DatePicker x:Name="CalendarDate"/>
            <TimePicker x:Name="CalendarTime"/>
            <Picker x:Name="PriorityPicker"/>
            
            <Button VerticalOptions="End" TextColor="White" BackgroundColor="Green" Text="Create Event" Clicked="CreateEvent"/>
            <Button VerticalOptions="End" TextColor="White" BackgroundColor="Red" Text="Cancel" Clicked="Cancel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>